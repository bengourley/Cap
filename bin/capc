#!/usr/bin/env node

/**
 * Module dependencies.
 */

var program = require('commander'),
	fs = require('fs'),
	parser = require('../lib/parser')(),
	generator = require('../lib/generator')();

program
	.version('0.0.1')
	.option(
		'-p, --print',
		'print the compiled js instead of outputting to file'
	)
	.option(
		'-t, --tree',
		'pretty print the nodes in the AST instead of compiling to file'
	)
	.parse(process.argv);

if (!program.args[0]) {
	console.log('No file supplied!');
} else {

	fs.readFile(program.args[0], 'utf8', function (err, data) {
			
			var ast = parser.parse(data);
			program.tree ? generator.printTree(ast) : generator.generate(ast);

	});
}