#!/usr/bin/env node

/**
 * Module dependencies.
 */

var program = require('commander'),
		fs = require('fs'),
		createCompiler = require('../lib/compiler');

program
	.version('0.0.1')
	.option(
		'-t, --printtree',
		'print the syntax tree instead of compiling (forces --print)'
	)
	.option(
		'-p, --print',
		'print the syntax tree instead of compiling'
	)
	.option(
		'-c, --compress',
		'compress the output'
	)
	.parse(process.argv);

if (!program.args[0]) {
	
	console.log('No file supplied!');

} else {

	fs.readFile(program.args[0], 'utf8', function (err, data) {
		
		var output = createCompiler().compile(data, {
			tree : program.printtree,
			compress : program.compress
		});

		console.log(output);

	});

}